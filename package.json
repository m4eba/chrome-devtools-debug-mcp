{
  "name": "chrome-devtools-debug-mcp",
  "version": "0.1.0",
  "description": "MCP server for JavaScript debugging via Chrome DevTools Protocol",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "chrome-devtools-debug-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "ws": "^8.18.0",
    "zod": "^3.24.0",
    "zod-to-json-schema": "^3.24.0",
    "debug": "^4.4.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "@types/debug": "^4.1.12",
    "@types/yargs": "^17.0.33"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
